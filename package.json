{
  "name": "sme-lending-protocol",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "contracts:compile": "yarn workspace @sme-lending/contracts compile",
    "contracts:test": "yarn workspace @sme-lending/contracts test",
    "contracts:deploy": "yarn workspace @sme-lending/contracts deploy",
    "backend:dev": "yarn workspace @sme-lending/backend dev",
    "backend:build": "yarn workspace @sme-lending/backend build",
    "frontend:dev": "yarn workspace @prism-finance/frontend dev",
    "frontend:build": "yarn workspace @sme-lending/frontend build",
    "dev": "concurrently \"yarn backend:dev\" \"yarn frontend:dev\"",
    "install:all": "yarn install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
  "nohoist": [
    "**/contracts/@openzeppelin/**"
  ]
}